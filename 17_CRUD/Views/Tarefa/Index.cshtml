@model List<Tarefa>

<h1 class="text-center">Lista de tarefas</h1>
<table class="table">
    <thead>
        <tr>
            <th>Tarefa</th>
            <th>Concluida</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarefa in Model)
        {
            <tr>
                <td>@tarefa.Descricao</td>
                <td>@(tarefa.Concluida == true ? "Sim" : "Não")</td>
                <td>
                    <a class="btn btn-outline-success" asp-action="Editar" asp-route-id="@tarefa.Id">Editar</a>
                    <a class="btn btn-outline-danger" asp-action="Deletar" asp-route-id="@tarefa.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Adicionar" class="btn btn-outline-info"> Adicionar Nova Tarefa </a>